---
// src/pages/experiencia.astro
import ModelViewer from '../components/3d/ModelViewer.jsx';
---

<html lang="pt-br">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Visualização 3D - ArqHub</title>
		<style>
			body {
				margin: 0;
				padding: 0;
				background-color: #111; /* Fundo escuro para destacar o 3D */
				color: white;
				font-family: system-ui, sans-serif;
				overflow: hidden; /* Evita scroll na página de imersão */
				height: 100vh;
				width: 100vw;
			}

			.immersive-container {
				width: 100%;
				height: 100%;
				position: relative;
			}

			/* Botão de Voltar Flutuante e Moderno */
			.back-button {
				position: absolute;
				top: 20px;
				left: 20px;
				z-index: 10;
				background: rgba(255, 255, 255, 0.1);
				backdrop-filter: blur(10px);
				border: 1px solid rgba(255, 255, 255, 0.2);
				color: white;
				padding: 10px 20px;
				border-radius: 30px;
				text-decoration: none;
				font-size: 0.9rem;
				transition: all 0.3s ease;
				display: flex;
				align-items: center;
				gap: 8px;
			}

			.back-button:hover {
				background: white;
				color: black;
				transform: translateY(2px);
			}

            /* Ajuste para o Canvas ocupar tudo */
            .canvas-wrapper {
                width: 100%;
                height: 100%;
            }
		</style>
	</head>
	<body>
		<div class="immersive-container">
			<a href="/" class="back-button">
				← Voltar ao Início
			</a>
			
			<div class="canvas-wrapper">
                <ModelViewer client:visible />
			</div>
		</div>
	</body>
</html>